class Solution {
public:
    double myPow(double x, int n) {
        double res = 1.0;
        int abs_n = abs(n);
        vector<double> cnt;
        double k = x;
        for (int i = 0; i < 32; ++i) {
            cnt.push_back(k);
            k = k * k;
        }
        long long index = 1;
        for (int i = 0; i < 32; ++i) {
            if (abs_n & index) res *= cnt[i];
            index <<= 1;
        }
        if (n < 0) res = 1 / res;
        return res;
    }
};
