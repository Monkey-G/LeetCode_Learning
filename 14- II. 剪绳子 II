constexpr int mode = 1e9 + 7;

class Solution {
public:
    int cuttingRope(int n) {
        if (n == 2) return 1;
        if (n == 3) return 2;
        long long res = 1;
        int k = n / 3 - 1;
        for (int i = 0; i < k; ++i)
        res = (3 * res) % mode;
        if (n % 3 == 0) return (3 * res) % mode;
        if (n % 3 == 1) return (4 * res) % mode;
        else return (6 * res) % mode;
    }
};
